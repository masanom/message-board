<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
        <li>
          <%= full_message %>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <label class="col-sm-1 contorol-label text-right text-nowrap" for="inputName">名前：</label>
      <div class="col-sm-11">
        <%= f.text_field :name,  id: "inputName",class: "form-control"  %>
      </div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 contorol-label text-right text-nowrap" for="inputBody">内容：</label>
      <div class="col-sm-11">
        <%= f.text_area :body, :size=>"30x5", id: "inputBody",class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
        <%= f.submit "メッセージ送信", class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>